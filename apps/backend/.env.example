# Environment Configuration
NODE_ENV=development
PORT=8000

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/nexgen_db"

# JWT Secrets (Use strong, unique secrets in production)
USER_JWT_SECRET="your_super_secret_user_jwt_key_here_change_in_production"
ADMIN_JWT_SECRET="your_super_secret_admin_jwt_key_here_change_in_production"
JWT_EXPIRES_IN="7d"
REFRESH_TOKEN_EXPIRES_IN="30d"

# Frontend App URLs
USER_APP_URL="http://localhost:3000"
ADMIN_APP_URL="http://localhost:3001"

# CORS Configuration
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"

# Redis Configuration (for sessions and caching)
REDIS_URL="redis://localhost:6379"

# Email Configuration (NodeMailer)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
FROM_EMAIL="noreply@nexgen.investment"
FROM_NAME="NexGen Investment Platform"

# Payment Gateway Configuration
# Stripe
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_webhook_secret"

# Coinbase Commerce
COINBASE_API_KEY="your_coinbase_api_key"
COINBASE_WEBHOOK_SECRET="your_coinbase_webhook_secret"

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_PATH="./uploads"

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Two-Factor Authentication
TWO_FACTOR_SERVICE_NAME="NexGen Investment"

# Mining Configuration
MINING_REWARD_CALCULATION_INTERVAL="0 0 * * *"  # Daily at midnight
BTC_NETWORK_DIFFICULTY_API="https://api.blockchain.info/stats"

# Investment Configuration
CRYPTO_PRICE_API="https://api.coingecko.com/api/v3"
GOLD_PRICE_API="https://api.metals.live/v1/spot/gold"

# Monitoring & Logging
LOG_LEVEL="info"
LOG_FILE="./logs/app.log"
ERROR_LOG_FILE="./logs/error.log"

# Health Check
HEALTH_CHECK_INTERVAL=300000  # 5 minutes