{
    "name": "nexgen-backend",
    "version": "1.0.0",
    "description": "NexGen Investment Platform Backend API for User and Admin Apps",
    "main": "dist/app.js",
    "scripts": {
        "build": "tsc",
        "start": "node dist/server.js",
        "dev": "nodemon --exec ts-node -r tsconfig-paths/register src/server.ts",
        "test": "jest",
        "test:watch": "jest --watch",
        "db:migrate": "prisma migrate dev",
        "db:generate": "prisma generate",
        "db:seed": "ts-node -r tsconfig-paths/register prisma/seed.ts",
        "db:reset": "prisma migrate reset",
        "db:studio": "prisma studio"
    },
    "prisma": {
        "seed": "ts-node prisma/seed.ts"
    },
    "dependencies": {
        "@prisma/client": "^5.7.0",
        "axios": "^1.6.2",
        "bcryptjs": "^2.4.3",
        "coinbase-commerce-node": "^1.0.4",
        "compression": "^1.7.4",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "cron": "^3.1.6",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-fileupload": "^1.4.3",
        "express-rate-limit": "^7.1.5",
        "express-validator": "^7.0.1",
        "helmet": "^7.1.0",
        "ioredis": "^5.3.2",
        "jsonwebtoken": "^9.0.2",
        "morgan": "^1.10.1",
        "multer": "^2.0.2",
        "nanoid": "^5.1.6",
        "nodemailer": "^6.9.7",
        "qrcode": "^1.5.3",
        "redis": "^4.6.12",
        "sharp": "^0.33.1",
        "socket.io": "^4.7.4",
        "speakeasy": "^2.0.0",
        "stripe": "^14.9.0",
        "winston": "^3.11.0"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/compression": "^1.7.5",
        "@types/cookie-parser": "^1.4.9",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.8",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/morgan": "^1.9.10",
        "@types/multer": "^2.0.0",
        "@types/node": "^20.10.4",
        "@types/nodemailer": "^6.4.14",
        "@types/qrcode": "^1.5.5",
        "@types/supertest": "^2.0.16",
        "jest": "^29.7.0",
        "nodemon": "^3.0.2",
        "prisma": "^5.7.0",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.3.3"
    },
    "keywords": [
        "nexgen",
        "investment",
        "mining",
        "crypto",
        "gold",
        "backend",
        "api"
    ],
    "author": "NexGen Team",
    "license": "MIT",
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    }
}